---
interface Props {
  title: String;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,#CC4522,rgba(255,255,255,0))]"
    >
    </div>
    <slot />
  </body>

  <style>
    html,
    body {
      height: 100dvh;
      color-scheme: dark light;
    }
  </style>
</html>
